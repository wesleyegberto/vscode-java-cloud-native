{
	"Github Action - Java CI": {
		"prefix": "gh-action-java-ci",
		"desciption": "Github Action CI for Java (build, test, upload test and coverage report)",
		"body": [
			"name: ${1:Java CI}\n",
			"on:",
			"  push",
			"  pull_request:",
			"    branches: [ ${2:$default-branch} ]",
			"jobs:",
			"  build:",
			"    name: Build and Test",
			"    runs-on: ubuntu-latest\n",
			"    steps:",
			"      - uses: actions/checkout@v2\n",
			"      - name: Set up JDK ${3:11}",
			"        uses: actions/setup-java@v1",
			"        with:",
			"          java-version: ${3:11}",
			"          architecture: x64\n",
			"      - name: Cache Maven packages",
			"        uses: actions/cache@v2",
			"        with:",
			"          path: ~/.m2",
			"          key: ${{ runner.os }}-m2-${{ hashFiles('**/pom.xml') }}",
			"          restore-keys: ${{ runner.os }}-m2\n",
			"      - name: Maven Test",
			"        run: mvn test\n",
			"      - run: mkdir coverage-report && cp -r target/site/jacoco/* coverage-report\n",
			"      - name: Publish Test Report",
			"        if: ${{ always() }}",
			"        uses: scacap/action-surefire-report@v1\n",
			"      - uses: actions/upload-artifact@v2",
			"        with:",
			"          name: Publish Test Coverage Report",
			"          path: coverage-report"
		]
	}
}